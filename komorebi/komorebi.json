{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 3,
  "default_container_padding": 3,
  "border": true,
  "border_implementation": "Windows",
  "border_style": "System",
  "border_width": 1,
  "border_offset": 0,
  "border_colours": {
    "single": "#89b4fa",
    "stack": "#a6ff99",
    "floating": "#89fff9",
    "monocle": "#f38ba8",
    "unfocused": "#303030"
  },
  "mouse_follows_focus": true,
  "transparency": true,
  "transparency_alpha": 220,
  "animation": {
    "enabled": true,
    "duration": 400,
    "fps": 120,
    "style": "EaseInOutBack"
  },
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "unfocused_border": "Base03",
    "bar_accent": "Base0D"
  },
  "stackbar": {
    "height": 24,
    "mode": "Never",
    "label": "Title",
    "tabs": {
      "width": 200,
      "font_size": 16
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "HorizontalStack"
        },
        {
          "name": "IV",
          "layout": "Columns"
        }
      ]
    }
  ]
}
